<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="412dp"
        android:layout_height="226dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/shapebackground_03"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView

            android:id="@+id/imglog_1"
            android:layout_width="56dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/component" />

        <TextView
            android:id="@+id/textlog_1"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plusjakarta_extrabold"
            android:gravity="right"
            android:text="Sign In"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textlog_2"
            android:layout_width="273dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:fontFamily="@font/plusjakarta_medium"
            android:gravity="center"
            android:text="Sign in and get your health personalized with our AI Technology."
            android:textColor="@color/Hintfontscolor"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>